#Student Class Setup

{
   abstract class Student
    {
        // fields
        private string _name;
        private string _id;
        //constructor
        public Student(string name, string id)
        {
            _name = name;
            _id = id;
        }
        public string Name //name property
        {
            get { return _name; }
            set { _name = value; }
        }
        public string ID // id property
        {
            get { return _id; }
            set { _id = value; }
        }
        public abstract double RequiredHours // RequiredHours property
        {
            get;
        }
    }
}
